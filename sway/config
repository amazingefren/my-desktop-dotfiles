### Key bindings
    ## System
        # Caffeine
        bindsym $mod+p exec '$HOME/.config/sway/custom/caffeine.sh'
        # Kill
        bindsym $mod+Shift+q kill
        # Mouse Tiling
        floating_modifier $mod normal
        # Reload Config
        bindsym $mod+Shift+r reload
        # Color Picker
        bindsym $mod+Shift+p exec '$HOME/.config/sway/custom/wl_color_picker.sh'
	    # Toggle Microphone
	        # bindsym $mod+m exec 'amixer -D pulse sset Capture toggle'
	        bindsym $mod+m exec '$HOME/.config/sway/custom/microphone_status.sh -t'
            # mute google-chrome input
            bindsym $mod+n exec '$HOME/.config/sway/custom/skype-mic-toggle.sh'
        # Toggle wlsunset
        bindsym $mod+Shift+b exec '$HOME/.config/sway/custom/verify_wlsunset.sh -t'


    ## Applications
        # Terminal
        bindsym $mod+Return exec $term
        # Firefox
        bindsym $mod+Shift+Return exec firefox
        # Launcher 
        bindsym $mod+d exec $menu

    ## Moving around:
        # Focus
        bindsym $mod+$left focus left
        bindsym $mod+$down focus down
        bindsym $mod+$up focus up
        bindsym $mod+$right focus right
        # Move Window
        bindsym $mod+Shift+$left move left
        bindsym $mod+Shift+$down move down
        bindsym $mod+Shift+$up move up
        bindsym $mod+Shift+$right move right

    ##  Workspaces:
        # Switch Workspace
        set $ws1 "1:Code"
        set $ws2 "2:Web"
        set $ws3 "3:Server"
        set $ws4 "4:Gaming"
        set $ws5 "5:Extra"
        set $ws6 "6:Misc"
        set $ws0 ""

        bindsym $mod+1 workspace $ws1
        bindsym $mod+2 workspace $ws2
        bindsym $mod+3 workspace $ws3
        bindsym $mod+4 workspace $ws4
        bindsym $mod+5 workspace $ws5
        bindsym $mod+6 workspace $ws6

        # Monitor Assignments
        workspace $ws1 output DP-1 
        workspace $ws2 output DP-1
        workspace $ws3 output DP-1
        workspace $ws4 output DP-1
        workspace $ws5 output DP-2
        workspace $ws6 output DP-2

        # Move Window to Workspace
        bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
        bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
        bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
        bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
        bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
        bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6

    ## Layout
    	# Horizontal Split
        bindsym $mod+b splith
    	# Vertical Split
        bindsym $mod+v splitv
	# Toggle Split
        bindsym $mod+q split toggle
        # Switch Layout for Focused Workspace
        bindsym $mod+s layout stacking
        bindsym $mod+w layout tabbed
        bindsym $mod+e layout toggle split
        # Fullscreen Application
        bindsym $mod+f fullscreen
        # Toggle Floating Application
        bindsym $mod+Shift+space floating toggle
        # Toggle Between Floating and Tiled Applications
        bindsym $mod+space focus mode_toggle
        # Focus Parent
        bindsym $mod+a focus parent mode_toggle
	    # Focus Child
	    bindsym $mod+c focus child

    ## Scratchpad
        # Move to Scratchpad
        bindsym $mod+Shift+minus move scratchpad
        # Show/Cycle Scrathpad
        bindsym $mod+minus scratchpad show

    ## Resize Mode
        mode "resize" {
            bindsym $left resize shrink width 10px
            bindsym $down resize grow height 10px
            bindsym $up resize shrink height 10px
            bindsym $right resize grow width 10px
            bindsym Return mode "default"
            bindsym Escape mode "default"
        }
	# Enter Resize Mode        
        bindsym $mod+r mode "resize"
    
    ## Power Mode
        set $Power-System  Power: S-Shutdown, R-Restart, L-Lock, E-Exit, Q-Suspend
        mode "$Power-System" {
            bindsym q       exec --no-startup-id systemctl suspend, 	mode "default"
            bindsym r       exec --no-startup-id systemctl reboot, 		mode "default"
            bindsym s     exec --no-startup-id systemctl poweroff -i, mode "default"
            bindsym l       exec --no-startup-id $lock, 				mode "default"
        
            bindsym Return  mode "default"
            bindsym Escape  mode "default"
        }
	# Enter Power Mode
        bindsym $mod+0          mode "$Power-System"

